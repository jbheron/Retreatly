<%= form_for @venue, url: event_venues_path(Event.find(params[:event_id])) do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %><br><br>

  <%= f.label :address %>
  <%= f.text_field :address %><br><br>

  <%= f.label :city %>
  <%= f.text_field :city %><br><br>

  <%= f.label :country %>
  <%= f.text_field :country %><br><br>

  <%= f.label :lodging %>
  <%= f.text_area :lodging %><br><br>

  <%= f.label :travel %>
  <%= f.text_area :travel %><br><br>

  <%= f.submit %>
<% end %>