<div class="container-fluid">
	<div class="row">
	</div>
</div>

<div class="container-fluid">
	<div class="row">

			<% a = 1 %>
			<% @events.each do |event|  %>
			<% i = a % 40 %>
			<%= link_to event_path(event) do %>
				<div class="col-xs-3 cntr" style="background-image: url('images/<%= i %>-poster.jpg'); height: 200px; background-size: cover; background-repeat: none; width: 25%; opacity: 0.8;">
					<div class="event">
						<p><%=	event.title %></p>
						<p><%=	event.host.first_name %> <%=	event.host.last_name %></p>
						<p>Starting: <%=	event.start_date %></p>
						<p>Ending: <%=	event.end_date %></p>
					</div>
				</div>
			<% end %>
			<% a += 1 %>
			<% end %>

	</div>
</div>
	<div class="events-container">
		<table class="table table-striped table-hover our-table" id="index-table">
			<tr class="bold" id="first-row">
				<td>Title</td>
				<td>Organizer</td>
				<td>Start Date</td>
				<td>End Date</td>
				<td>Location</td>
			</tr>
			<%= render @events %>
		</table>
	</div>

